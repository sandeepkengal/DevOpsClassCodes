pipeline{
    agent { label 'tomcat' }

    stages{
        stage('code-checkout'){
            steps{
            git credentialsId: 'githubcred', url: 'https://github.com/sandeepkengal/DevOpsClassCodes.git'
        }
    }

        stage('code-cpmpile'){
            steps{
                sh "mvn compile"
            }
        }

        stage('code-testing'){
            steps{
                sh "mvn test"
            }
        }

        stage('quality-asuarance'){
            steps{
                sh "mvn pmd:pmd"
            }
        }

        stage('deploy'){
            steps{
                sh "cd /var/lib/jenkins/workspace/new-project/target"
                sh "sudo cp *.war /opt/tomcat/webapps"
            }
        }
}

}
